            ],
            "metadata": {
                "description": "Size of the head node."
            }
        },
        "workerMachineSize": {
            "type": "string",
            "defaultValue": "Standard_DS2",
            "allowedValues": [
                "Standard_A0",
                "Standard_A1",
                "Standard_A2",
                "Standard_A3",
